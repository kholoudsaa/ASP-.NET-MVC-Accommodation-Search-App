                    <input type="text" id="email" name="email" placeholder="Your Email Address..."  />
                  <textarea rows="5" cols="30" placeholder="Your Message Here..."></textarea><br />
                    <button class="input-go btn btn-block" style="margin-bottom: 30px;">Send</button>
                </form>
                <div class="contact">
                    <p id="twitter"></p>
                    <p id="facebook"></p>
                    <p id="github"></p>
                    <p id="youtube"></p>
